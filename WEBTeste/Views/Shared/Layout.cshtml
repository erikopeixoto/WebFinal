@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Minha Aplicação MVC-5</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


    <style type="text/css">
        input:focus {
            border-color: #35861B;
            box-shadow: 2px 4px 5px #35861B;
            outline: none;
            border-radius: 13px;
        }
    </style>

</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="masthead">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="dropdown">
                        <a href="#" data-toggle="dropdown" class="dropdown-toggle">Cadastros<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Categorias", "Index", "Categoria")</li>
                            <li>@Html.ActionLink("Clientes", "Index", "Cliente")</li>
                            <li>@Html.ActionLink("Produtos", "Index", "Produto")</li>
                            <li>@Html.ActionLink("Unidades", "Index", "Unidade")</li>
                            <li>@Html.ActionLink("Usuários", "Index", "Usuario")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" data-toggle="dropdown" class="dropdown-toggle">Movimento<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Venda", "Index", "NotaFiscal")</li>
                            <li>@Html.ActionLink("Relatório", "Consultar", "NotaFiscal")</li>
                        </ul>
                    </li>
                    <li style="text-align:right;">
                        <ul class="nav navbar-right">
                            @Html.Partial("_LoginPartial")
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @if (Request.IsAuthenticated)
        {
            <ul class="control-label" style="text-align:left">
                <li>Ola, @User.Identity.Name!</li>
            </ul>
        }
        <hr />
        @RenderBody()
        <hr />
        <footer style="text-align:center">
            <p>&copy; @DateTime.Now.Year - ASP.NET Aplicação (MVC-5)</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angularJS")
    <script type="text/javascript">

        $(function () {

            $('.datepicker').datepicker({
                format: "dd/mm/yyyy",
                todayBtn: "linked",
                language: "pt-BR",
                autoclose: true,
                todayHighlight: true
            });
        });
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
